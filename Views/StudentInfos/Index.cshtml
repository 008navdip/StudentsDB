@model IEnumerable<StudentsDB.Models.StudentInfos>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <h1>Students Info</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
              
                <th> <a asp-action="Create">New Student</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StdId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StdId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StdId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}